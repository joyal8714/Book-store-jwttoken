<h2>All Books</h2>
<a href="/cart" class="btn btn-success" style="float: right;"> View Cart</a>
<div style="display: flex; flex-wrap: wrap; gap: 20px;">
  {{#each books}}
    <div style="border: 1px solid #ccc; padding: 10px; width: 200px; text-align: center;">
      <img src="/uploads/{{this.cover}}" alt="{{this.title}}" style="width: 100px; height: 140px; object-fit: cover;"><br>
      <strong>{{this.title}}</strong><br>
      <small>by {{this.author}}</small><br>
      <p style="color: green;">â‚¹{{this.price}}</p>

      {{#if (eq ../user.role "admin")}}
        <a href="/admin/edit-book/{{this._id}}">
          <button>Edit</button>
        </a>
        <form action="/admin/delete-book/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
          <input type="hidden" name="returnTo" value="/books" />
          <button type="submit" style="color: red;">Delete</button>
        </form>
      {{/if}}

      {{#if (eq ../user.role "user")}}
        <form action="/add-to-cart/{{this._id}}" method="POST">
          <button type="submit" style="color:rgb(42, 35, 138)">Add to Cart</button>
        </form>
      {{/if}}
    </div>
  {{/each}}
</div>
