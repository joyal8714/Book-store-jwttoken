<h2 style="text-align: center; margin-top: 20px; font-size: 32px; color: #333;">🛒 Your Cart</h2>

<div style="display: flex; justify-content: flex-end; margin: 20px;">
  <form action="/logout" method="GET">
    <button type="submit" style="background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 5px; cursor: pointer;">Logout</button>
  </form>
</div>








{{#if hasItems}}
<form action="/buy-all" method="POST" style="text-align: center; margin-top: 30px;">
  <button type="submit" style="background-color: #007bff; color: white; padding: 12px 30px; border: none; border-radius: 8px; font-size: 18px; font-weight: bold; cursor: pointer;">
    🛍️ BUY ALL ITEMS
  </button>
</form>

  <div style="display: flex; flex-direction: column; gap: 25px; max-width: 800px; margin: auto; padding: 20px;">
    {{#each cart.items}}
      <div style="display: flex; align-items: flex-start; gap: 20px; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
        <img src="/uploads/{{this.bookId.cover}}" alt="{{this.bookId.title}}" style="width: 100px; height: 140px; object-fit: cover; border-radius: 5px;" />

        <div style="flex-grow: 1;">
          <h3 style="margin: 0 0 5px;">{{this.bookId.title}}</h3>
          <p style="margin: 0; color: #555;">by {{this.bookId.author}}</p>
          <p style="margin: 10px 0; font-weight: bold;">💰 Price: ₹{{this.bookId.price}}</p>
          <p style="margin: 0;">🧾 Quantity: <strong>{{this.quantity}}</strong></p>
          <p style="margin: 5px 0 15px;">📦 Total: ₹<strong>{{multiply this.bookId.price this.quantity}}</strong></p>

