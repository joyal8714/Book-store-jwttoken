<h2>Your Cart</h2>
<form action="/logout" method="GET" style="text-align:right">
  <button type="submit" style="background-color: red; color: white; text-align:right">Logout</button>
</form>

{{#if hasItems}}
  <div style="display: flex; flex-direction: column; gap: 20px;">
    {{#each cart.items}}
      <div style="display: flex; align-items: center; gap: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
        <img src="/uploads/{{this.bookId.cover}}" alt="{{this.bookId.title}}" style="width: 100px; height: 140px; object-fit: cover;" />
        
        <div>
          <h3>{{this.bookId.title}}</h3>
          <p>by {{this.bookId.author}}</p>
          <p>Price: ₹{{this.bookId.price}}</p>
          <p>Quantity: {{this.quantity}}</p>
          <p>Total: ₹{{multiply this.bookId.price this.quantity}}</p>
<form action="/buy" method="POST">
  <button type="submit" style="background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px;">
    BUY
  </button>
</form>


        </div>
      </div>
    {{/each}}
    
  </div>
{{else}}
  <p>Your cart is empty</p>
{{/if}}
