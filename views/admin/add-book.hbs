<h1>Add new book</h1>
<form action="/admin/add-book" method="POST" enctype="multipart/form-data" style="margin-bottom: 30px;">
  <label for="title">Title:</label><br>
  <input type="text" id="title" name="title" placeholder="Title" required><br><br>

  <label for="author">Author:</label><br>
  <input type="text" id="author" name="author" placeholder="Author" required><br><br>

  <label for="price">Price:</label><br>
  <input type="number" id="price" name="price" placeholder="Price" required><br><br>

  <label for="cover">Book Cover:</label><br>
  <input type="file" id="cover" name="cover" accept="image/*" required><br><br>

  <button type="submit">📚 Add Book</button>
</form>

<hr>

<h2>All Books</h2>

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
  {{#each books}}
    <div style="border: 1px solid #ccc; padding: 10px; width: 200px; text-align: center;">
      <img src="/uploads/{{this.cover}}" alt="{{this.title}}" style="width: 100px; height: 140px; object-fit: cover;"><br>
      <strong>{{this.title}}</strong><br>
      <small>by {{this.author}}</small><br>
      <p style="color: green;">₹{{this.price}}</p>
        
    <a href="/admin/edit-book/{{this._id}}">
      <button>Edit</button>
    </a>
 <form action="/admin/delete-book/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
  <button type="submit" style="color: red;">Delete</button>
</form>


    </div>
    
  {{/each}}
</div>
